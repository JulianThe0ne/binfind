<%# <%= link_to "New bin", new_bin_path if policy(Bin).new? %>
<a class="btn btn-ghost" href="bins?query=can&commit=Search#">Can</a>
<a class="btn btn-ghost" href="bins?query=burnable&commit=Search#">Burnable</a>
<a class="btn btn-ghost" href="bins?query=unburnable&commit=Search#">Unburnable</a>
<a class="btn btn-ghost" href="bins?query=pet+bottle&commit=Search#">Pet Bottle</a>
<div class="map-container" data-controller="map" data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"
  data-map-markers-value="<%= @markers.to_json %>">
  <%= form_with url: bins_path, method: :get, class: "d-flex" do %>
    <% @categories.each do |category| %>
      <%= check_box_tag 'query[]', category.name, params[:query]&.include?(category.name), id: "category-#{category.id}", class: 'category-selector d-none' %>
      <label for="category-<%= category.id %>">
        <%= category.name %>
      </label>
    <% end %>
    <%= submit_tag "Search", class: "btn btn-primary" %>
  <% end %>
  <div class="mapbox" style="width: 100%;" data-map-target="canvas">
  </div>
  <div class="footer">
    <div class="footer-links">
      <i class="fa-solid fa-eye btn-toggle" data-action="click->map#toggle"></i>
      <a href="https://www.instagram.com/supkev/" target="_blank"><i class="fab fa-instagram"></i></a>
      <a href="https://www.facebook.com/kevin.s.tsai" target="_blank"><i class="fab fa-facebook"></i></a>
      <a href="https://twitter.com/supkev" target="_blank"><i class="fab fa-twitter"></i></a>
    </div>
  </div>
</div>
